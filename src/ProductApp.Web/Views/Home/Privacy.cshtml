@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="mb-4 text-primary">@ViewData["Title"]</h1>
            <p class="lead">
                This page provides details about the privacy policy of the Product Management Portal. We value your privacy and are committed to protecting your personal data in compliance with relevant laws and best practices.
            </p>
            <ul>
                <li>We do not share user data with third parties.</li>
                <li>All data is securely stored and protected.</li>
                <li>You can request deletion or updates to your personal data at any time.</li>
            </ul>
        </div>
        <div class="col-md-6 text-center">
            <img src="~/img/privacy-classic.png" alt="Privacy Image" class="img-fluid rounded shadow-sm" style="max-height: 300px;" />
        </div>
    </div>
</div>
